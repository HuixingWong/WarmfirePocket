<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.activity.MainActivity" >

    <RelativeLayout
        android:id="@+id/rrl1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#0ed4c1" >

        <TextView
            android:id="@+id/txt_rmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="月利润"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_rzhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/txt_rmonth"
            android:layout_centerHorizontal="true"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txt_ryye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_rin"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/txt_rzhuan"
            android:text="月营业额"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_rin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txt_ryye"
            android:layout_below="@+id/txt_rmonth"
            android:layout_marginRight="14dp"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_rout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_rin"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/txt_rzhuan"
            android:text="0.00"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_rcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_ryye"
            android:layout_alignBottom="@+id/txt_ryye"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_rzhuan"
            android:text="月成本额"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>
    
    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rrl1"
        android:layout_above="@+id/rrl2" >
        
    </ListView>

    <RelativeLayout
        android:id="@+id/rrl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btn_radd"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="#f5a01f"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout>